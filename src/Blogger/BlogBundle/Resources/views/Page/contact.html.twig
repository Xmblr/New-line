{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}



    <div class="row" style="background-color: #f5f5f7; padding-bottom: 3%;">
        <div class="container-fluid" style="margin-top: 3%;">

            <div class="col-md-8">
                <div class="text-center">
                    <h1 style=" text-transform: uppercase; text-align:left;">Как с нами связаться</h1>
                    <img src="images/title-border.png" alt="" class="img-responsive"/>
                    <p class="sub-title text-muted" style="padding-bottom: 3%; text-align: left;">Заполните форму обратной связи и наши специалисты свяжутся с
                        вами в ближайшее время.</p>
                </div>


                <form>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="text" class="form-control" id="username" placeholder="Имя" required/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="email" class="form-control" id="useremail" placeholder="Ваш Email"
                                       required/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">

                                <input type="text" class="form-control" id="subject" placeholder="Тема" required/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                            <textarea class="form-control" rows="5" id="message"
                                      placeholder="Сообщение...."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <input type="submit" class="submitBnt btn btn-custom" value="Отправить сообщение"
                                   style="color:black;">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <h3 style="padding-bottom: 3%; color: black; font-size: 20px; text-transform: uppercase; text-align: left; font-family: Century Gothic; font-weight: 500;">
                    Следите за нами в соц. сетях</h3>
                <img src="images/title-border.png" alt="" class="img-responsive"/>
                <div style="text-align: left; vertical-align: middle; padding-top:5%; padding-bottom: 8%;">

                <span class="social-icons-contacts fa fa-facebook"></span>
                <span class="social-icons-contacts fa fa-vk"></span>
                <span class="social-icons-contacts fa fa-instagram"></span>
                <span class="social-icons-contacts fa fa-google"></span>
                <span class="social-icons-contacts fa fa-twitter"></span>
                </div>
            </div>
            <div class="col-md-4">
                <h3 style="padding-bottom: 3%; color: black; font-size: 20px; text-transform: uppercase; text-align: left; font-family: Century Gothic; font-weight: 500;">
                    E-mail</h3>
                <img src="images/title-border.png" alt="" class="img-responsive"/>
                <p style="padding-top:5%; padding-bottom: 8%;">info@new-line.by</p>
            </div>
            <div class="col-md-4">
                <h3 style="padding-bottom: 3%; color: black; font-size: 20px; text-transform: uppercase; text-align: left; font-family: Century Gothic; font-weight: 500;">
                    Телефон</h3>
                <img src="images/title-border.png" alt="" class="img-responsive"/>
                <p style="padding-top:5%; padding-bottom: 8%;">+375 29 130-65-45</p>
            </div>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
        <div class="blogger-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {#<p>Fill out the form below and we will contact you</p>#}

    {#{{ form_start(form, { 'action': path('BloggerBlogBundle_contact'), 'method': 'POST', 'attr': {'class': 'blogger'} }) }}#}
    {#{{ form_errors(form) }}#}

    {#{{ form_row(form.name) }}#}
    {#{{ form_row(form.email) }}#}
    {#{{ form_row(form.subject) }}#}
    {#{{ form_row(form.body) }}#}

    {#{{ form_rest(form) }}#}

    {#<input type="submit" value="Submit"/>#}

{% endblock %}