        {% for breadcrumb_item in knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('BloggerBlogBundle:Builder:mainMenu')) %}
            {% if not loop.last %}
                <li typeof="v:Breadcrumb"><a href="{{ breadcrumb_item.uri }}" rel="v:url" property="v:title">{{ breadcrumb_item.label }}</a></li>
            {% else %}
                <li typeof="v:Breadcrumb" class="active">{{ breadcrumb_item.label }}</li>
            {% endif %}
